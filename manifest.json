{
    "manifest_version": 3,
    "name": "YouTube Music Discord Presence",
    "version": "1.0",
    "description": "Share your YouTube Music activity on Discord",
    "permissions": ["contextMenus", "storage"],
    "host_permissions": ["*://music.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://music.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }